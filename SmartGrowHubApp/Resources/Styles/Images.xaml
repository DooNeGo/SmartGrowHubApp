<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="SmartGrowHubApp.Resources.Styles.Images"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:SmartGrowHubApp.FontAwesome">

    <FontImageSource
        x:Key="SettingsIcon"
        FontFamily="FASolid"
        Glyph="{x:Static fa:SolidIconFont.Gear}"
        Color="{AppThemeBinding Light={StaticResource OnPrimaryContainer},
                                Dark={StaticResource OnPrimaryContainerDark}}" />

    <FontImageSource
        x:Key="HomeIcon"
        FontFamily="FASolid"
        Glyph="{x:Static fa:SolidIconFont.House}"
        Color="{AppThemeBinding Light={StaticResource OnPrimaryContainer},
                                Dark={StaticResource OnPrimaryContainerDark}}" />

</ResourceDictionary>