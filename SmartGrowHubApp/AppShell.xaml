<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartGrowHubApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:SmartGrowHubApp.FontAwesome"
    xmlns:local="clr-namespace:SmartGrowHubApp"
    xmlns:pages="clr-namespace:SmartGrowHubApp.Pages"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    FlyoutBackground="{AppThemeBinding Light={StaticResource PrimaryContainer},
                                       Dark={StaticResource PrimaryContainerDark}}"
    FlyoutBehavior="{OnIdiom Phone=Flyout,
                             Default=Locked}"
    FlyoutWidth="60"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light={StaticResource PrimaryContainer},
                                                  Dark={StaticResource PrimaryContainerDark}}"
    Shell.TabBarIsVisible="{OnIdiom Phone=True,
                                    Default=False}">

