    <Shell.ItemTemplate>
        <DataTemplate>
            <Image
                x:DataType="FlyoutItem"
                HeightRequest="45"
                HorizontalOptions="Center"
                Source="{Binding FlyoutIcon}"
                VerticalOptions="Center"
                WidthRequest="30" />
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate pages:ControllerPage}" Route="HomePage" />
        <FlyoutItem.Icon>
            <FontImageSource
                FontFamily="FASolid"
                Glyph="{x:Static fa:SolidIconFont.House}"
                Color="{AppThemeBinding Light={StaticResource OnPrimaryContainer},
                                        Dark={StaticResource OnPrimaryContainerDark}}" />
        </FlyoutItem.Icon>
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" Route="SettingsPage" />
        <FlyoutItem.Icon>
            <FontImageSource
                FontFamily="FASolid"
                Glyph="{x:Static fa:SolidIconFont.Gear}"
                Color="{AppThemeBinding Light={StaticResource OnPrimaryContainer},
                                        Dark={StaticResource OnPrimaryContainerDark}}" />
        </FlyoutItem.Icon>
    </FlyoutItem>

    <TabBar x:Name="PhoneTabBar" Title="Test">
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
            <Tab.Icon>
                <FontImageSource
                    FontFamily="FASolid"
                    Glyph="{x:Static fa:SolidIconFont.House}"
                    Color="{AppThemeBinding Light={StaticResource OnPrimaryContainer},
                                            Dark={StaticResource OnPrimaryContainerDark}}" />
            </Tab.Icon>
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" Route="SettingsPage" />
            <Tab.Icon>
                <FontImageSource
                    FontFamily="FASolid"
                    Glyph="{x:Static fa:SolidIconFont.Gear}"
                    Color="{AppThemeBinding Light={StaticResource OnPrimaryContainer},
                                            Dark={StaticResource OnPrimaryContainerDark}}" />
            </Tab.Icon>
        </Tab>
    </TabBar>

</Shell>
